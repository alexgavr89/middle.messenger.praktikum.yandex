{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test.ts"],
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "sourceMap": true,

    "strict": true,
 
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
